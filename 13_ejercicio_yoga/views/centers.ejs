<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Nuestros Centros</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/centers.css" />
  </head>
  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-8">
            <h2 class="text-center">Nuestros Centros</h2>
            <div class="container-centers p-5">
              <!-- Botones superiores -->
              <div class="top-buttons mb-4">
                <button
                  class="btn btn-danger"
                  onclick="window.location.href='/centers/register'"
                >
                  AÃ±adir Centro
                </button>
                <button
                  class="btn btn-secondary"
                  onclick="window.location.href='/'"
                >
                  Volver
                </button>
              </div>
              <div class="row cards-container row-gap-5">
                <% centers.forEach(elem => { %>
                <div class="col-12 col-sm-6 col-lg-4">
                  <div class="card">
                    <img
                      class="card-img-top"
                      src="/images/centers/<%= elem.center_img?elem.center_img:'defaultCenter.jpeg'%>"
                      alt="Imagen Centro"
                    />
                    <div class="card-body">
                      <h5 class="card-title">Direccion: <%= elem.name %></h5>
                      <p class="card-text">Ciudad: <%= elem.city %></p>
                      <p class="card-text">Provincia: <%= elem.province %></p>
                      <p class="card-text">Email: <%= elem.email %></p>
                      <p class="card-text">Sitio Web: <%= elem.web_page %></p>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>

          <div class="col-4">
            <h2 class="text-center">Filtrar</h2>
            <div class="search-container p-5">
              <div class="row d-flex flex-column">
                <div class="col">
                  <input type="radio" />
                  <label for="">Filtrar por nombre</label><br />
                  <input type="radio" />
                  <label for="">Filtrar por Ciudad</label><br />
                  <input type="radio" />
                  <label for="javascript">Filtrar por provincia</label>
                </div>
                <div class="col pt-5">
                  <button>Buscar</button>
                  <button>Limpiar Busqueda</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
