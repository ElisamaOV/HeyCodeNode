<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Golosinas la Chari</title>
    <%- include('./modules/links.ejs') %>
  </head>
  <body>
    <%- include('./modules/navbar.ejs') %>
    <main class="d-flex flex-column align-items-center">
      <h1>INFORMACION DE CANDY</h1>
      <br />
      <div class="card" style="width: 18rem">
        <img
          class="card-img-top"
          src="/images/candies/<%= candy.image ? candy.image : 'defaultCandy.jpeg' %>"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title"><%= candy.name %></h5>
          <p class="card-text">Tipo de golosina: <%= candy.candy_type %></p>
        </div>
      </div>
      <button
        type="button"
        onclick="window.location.href='/candies/editCandy/<%= candy.id %>'"
        class="btn btn-dark pt-2 pb-2 mt-2 mb-2"
      >
        Modificar
      </button>
      <button
        type="button"
        onclick="window.location.href='/candies/deleteLogical/<%= candy.id %>'"
        class="btn btn-dark pt-2 pb-2 mt-2 mb-2"
      >
        Eliminar logico
      </button>
      <button
        onclick="window.location.href='/candies/deleteTotal/<%= candy.id %>'"
        class="btn btn-dark pt-2 pb-2 mt-2 mb-2"
      >
        Eliminar total
      </button>
      <button
        onclick="window.location.href='/'"
        class="btn btn-dark pt-2 pb-2 mt-2 mb-2"
      >
        Volver
      </button>
    </main>
    <%- include('./modules/footer.ejs') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
