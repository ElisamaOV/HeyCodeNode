<!DOCTYPE html>
<html>
  <head>
    <%- include('./modules/links.ejs') %>
    <title>Welcome!</title>
  </head>
  <body>
    <%- include('./modules/navbar.ejs') %>
    <main>
      <h1 class="text-center pt-5 pb-5">Perfil de diseñador</h1>
      <div
        class="container-xxl d-flex flex-column justify-content-center align-items-center"
      >
        <div class="row row-gap-5">
          <div class="col-12 col-sm-12 col-lg-6">
            <div class="profile-card-2">
              <img
                src="/images/designers/<%= result1.img_designer?result1.img_designer:'default.jpg'%>"
                class="img img-responsive"
              />
              <div class="profile-name">
                <%= result1.name %> <%= result1.lastname %>
              </div>
              <div class="profile-city">Diseñador/a de <%= result1.city%></div>
            </div>
          </div>
          <div
            class="col-12 col-sm-12 col-lg-6 d-flex flex-column justify-content-center"
          >
            <div class="card">
              <div class="card-header">Información de diseñador</div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p>- <%= result1.description %></p>
                  <p>- Procedencia: <%= result1.city %></p>
                  <p>- Telefono de contacto: <%= result1.phone %></p>
                  <p>- Email: <%= result1.email %></p>
                </blockquote>
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="section-1">
        <h1 class="text-center">Diseños</h1>
        <div class="container-xxl">
          <div class="row">
            <% result2.forEach((elem) => { %>
            <div class="col-12 col-sm-6 col-lg-3 d-flex flex-wrap">
              <button
                onclick="window.location.href='/designs/showDesignf/<%= elem.id_design %>'"
                class="bg-transparent border-0"
              >
                <div class="profile-card-2">
                  <img
                    src="/images/designs/<%= elem.img_designer?elem.img_designer:'default.jpg'%>"
                    class="img img-responsive"
                  />
                  <div class="profile-name"><%= elem.name %></div>
                </div>
              </button>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </main>
    <%- include('./modules/footer.ejs') %>
  </body>
</html>
